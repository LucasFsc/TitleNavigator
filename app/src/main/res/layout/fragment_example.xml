<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="#ddd"
              android:clickable="true"
              android:focusable="true">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/number"
              android:text="@string/frag_number" android:textAllCaps="true" android:textSize="16sp" android:textColor="#000"
              android:layout_gravity="center"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="new frag"
            android:textAllCaps="true" android:id="@+id/button" android:layout_gravity="center"/>

</LinearLayout>